upstream mediawiki_backend {
    server {{ mediawiki1_ip }} max_fails=3 fail_timeout=30s;  # IP первого сервера MediaWiki
    server {{ mediawiki2_ip }} max_fails=3 fail_timeout=30s;  # IP второго сервера MediaWiki
    keepalive 16; 
}

server {
  listen 80;
  server_name {{ ansible_host }};

  location / {
      proxy_pass http://mediawiki_backend;
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
      proxy_set_header X-Forwarded-Host $host;
  }
}
