server {
    listen 80;
    server_name "{{ ansible_host }}";
    root /var/www/mediawiki;  # Путь к вашей установке MediaWiki
    index index.php;

    access_log /var/log/nginx/mediawiki.access.log;
    error_log /var/log/nginx/mediawiki.error.log;

    location / {
        try_files $uri $uri/ /index.php?$args;
    }

    location ~ \.php$ {
        fastcgi_pass unix:/var/run/php/php8.1-fpm.sock;  # Путь к PHP-FPM сокету, может отличаться в зависимости от версии PHP
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
    }

    location ~ /\.ht {
        deny all;
    }

    # Дополнительные настройки безопасности
    client_max_body_size 10M;
}